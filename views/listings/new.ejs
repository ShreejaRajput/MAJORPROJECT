<% layout("/layouts/boilerplate")%>
<div class="row">
    <div class="col-8 offset-2" >
        <br><br>
    <h3>Create a new Listing</h3>
    <br><br>
    <form 
    method="post" 
    action="/listings"  
    class="row g-3 
    needs-validation" novalidate 
    enctype="multipart/form-data">
        <div >
        <label for="title" class="form-label" >Title</label>
        <input type="text" placeholder="Enter title" name="listing[title]" class="form-control" required>
            <div class="valid-feedback">
                Title Looks good!
            </div>
    </div>

        <br>
        <div >
            <label for="description" class="form-label" >Decsription</label>
            <textarea  name="listing[description]" class="form-control" required></textarea>
            <div class="invalid-feedback">
                Enter a valid description!
               </div>
        </div>
        <br>

        <div class="mb-3">
            <label for="Image" class="form-label" class="form-label">Upload Image</label>
            <input 
             name="listing[image]"
             type="file"
             class="form-control"
             >required
        </div>
        <br>
    <div class="row">
    <div class="col-md-4">
            <label for="Price" class="form-label" class="form-label" required>Price</label>
            <input placeholder="Enter price" name="listing[price]" class="form-control" required min="0">
       <div class="invalid-feedback">
        Enter a valid price!
       </div>
        </div>

        
        <br>
        <div class="col-md-8">
            <label for="Country" class="form-label" >Country</label>
        <input type="text" placeholder="Enter country" name="listing[country]" class="form-control" required>
        <div class="invalid-feedback">
            Enter the Country!
           </div>
    </div>
</div>
        <br><br>
        <div >
            <label for="Location" class="form-label" class="form-label" >Location</label>
            <input type="text" placeholder="Enter location" name="listing[location]" class="form-control" required>
            <div class="invalid-feedback">
                Enter a valid location!
               </div>
        
        </div><br><br>
        <button class="btn btn-danger ">Add</button>
<!-- this listings[name] is the object key value pair to access all the value fields from the form -->
    </form>
</div>
</div>

