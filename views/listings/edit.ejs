<% layout("/layouts/boilerplate")%>

<br>
    <div class="row">
        <div class="col-8 offset-2">
    <h3>Edit this Listing</h3><br>
    <form 
    method="post" 
    action="/listings/<%=listing._id%>?_method=PUT"
    novalidate
    class="needs-validation"
    enctype="multipart/form-data">
        <div >
            <label for="title" class="form-label">Title</label>
        <input type="text"
         value="<%=listing.title%>" 
         name="listing[title]" 
         class="form-control"
         required />
         <div class="valid-feedback">
            Title Looks good!
        </div>
    </div>
        <br><br>
        <div >
            <label for="description" class="form-label">description</label>
        <textarea  
        name="listing[description]" 
        class="form-control" required> <%=listing.description%> 
    </textarea>
    <div class="invalid-feedback">
        Enter a valid description!
       </div>
    </div>
        <br><br>


        <div class="mb-3">
            Original Image <br>
    <img src="<%=originalImageUrl%>" alt="">
    </div>

        <div >
            <label for="image" class="form-label">upload new Image</label>
        <input
        name="listing[image]" 
        class="form-control" 
        type="file"
       
        />
      
    </div>
        <br><br>
        <div class="row">
        <div class="col-md-4">
            <label for="price" class="form-label">Price</label>
        <input 
        type="number" 
        value="<%=listing.price%>" 
        name="listing[price]" 
        class="form-control" 
        required />
        <div class="invalid-feedback">
            Enter a valid price!
           </div>
    </div>
        <br><br>
        <div class="col-md-8">
            <label for="country" class="form-label">Country</label>
            <input 
            type="text" value="<%=listing.country%>" 
            name="listing[country]" 
            class="form-control"
            required />
            <div class="invalid-feedback">
                Enter a valid country!
               </div>
        </div>
    </div>
        <br><br>
        <div >
            <label for="location" class="form-label">Location</label>
            <input 
            type="text" 
            value="<%=listing.location%>" 
            name="listing[location]" 
            class="form-control"
            required/>
            <div class="invalid-feedback">
                Enter a valid location!
               </div>
        </div>
            <br><br>
        <button class="btn btn-danger edit-btn">Edit</button>
<!-- this listings[name] is the object key value pair to access all the value fields from the form -->
</form>
</div>
</div>


